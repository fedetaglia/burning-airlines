<%= link_to 'New Flight', "#new" , id: 'new-flight', :class => "btn btn-default" %>
<div class="form">
  <%= render 'form' %>
</div>


<table class="table table-striped table-condensed">
  <h1>Avaliable Flights </h1>
  <thead>
    <tr>
      <th>Flight Number</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Plane Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
    <tr>
      <td><%= flight.number %></td>
      <td><%= flight.origin %></td>
      <td><%= flight.destination %></td>
      <td><%= flight.date %></td>
      <td><%= flight.airplane %></td>
      <td><%= link_to 'Show', flight, :class => "btn btn-default" %></td>
      <td><%= link_to 'Edit', edit_flight_path(flight), :class => "btn btn-default"%></td>
      <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
$('.form').hide();
$(document).ready();
  $('#new-flight').on('click', function(){
    $('.form').toggle();
    $('.table').hide();
  })
  $('#new-flight-create').on('click', function(){
    $('.table').show();
  })

</script>